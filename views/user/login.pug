extends ../layout
block content
	div(class="w3-center")
		form#login-form(name="login-form" method="post" action="/user/login")
			h3(class="theme-text")=title
			div(class="w3-row w3-padding-16")
				div(class="w3-quarter w3-label")
					label Username: 
				div(class="w3-half")
					input(class="w3-input theme-input w3-no-border" type="text" name="username")
			div(class="w3-row w3-padding-16")
				div(class="w3-quarter w3-label")
					label Password: 
				div(class="w3-half")
					input(class="w3-input theme-input w3-no-border" type="password" name="password")
			if redirectURL
				input(type="hidden" name="redirectURL" value=redirectURL)
			div(class="w3-padding-16")
				input(type="submit" class="theme-submit w3-button" value="Submit")